<div class='container px-5 px-md-0'>
  <div class='row'>
    <div class='col-md-12'>
    <h1 style= "font-family: fantasy">Results index</h1>

    <table class="table table-inverse">
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= image_tag post.user.get_image, size:"100x100" %></td>
            <td><%= post.user.name %></td>
            <td><%= post.body %></td>
            <td>
              <% post.tags.each do |tag| %>
                <%= tag.name %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to "Back", user_posts_path %>
    </div>
  </div>
</div>
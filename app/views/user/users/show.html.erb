<div class='container px-5 px-md-0'>
  <div class='row'>
    <div class='col-md-4'>
      <h1 style= "font-family: fantasy">User Details</h1><br>
      <div>
        <p><%= image_tag @user.get_image, class: "rounded-circle", size:"200x200" %></p>
        <p class='h4'>Name：<%= @user.name %></p>
        <p>Message：<%= @user.introduction %></p>
        <% if @user.name != "guestuser" %>
          <p><i class="fas fa-pencil-alt"></i><%= link_to "User Edit", edit_user_user_path %></p>
        <% end %>
      </div>
    </div>


    <div class='col-md-8'>
      <h1 style= "font-family: fantasy">User Posts</h1>
      <table class='table table-inverse'>
        <tbody>
          <% @posts.each do |posts| %>
          <tr>
            <td><%= posts.body %></td>
            <td><i class="fas fa-comments"></i> <%= link_to "#{@post.post_comments.count}", user_post_path(posts) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @posts %>
    </div>
  </div>
</div>
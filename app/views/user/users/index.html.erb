<div class='container px-5 px-md-0'>
  <div class='row'>
    <div class='col-md-12'>
      <h3>Users</h3>
      <table class='table table-inverse'>
        <tbody>
      　　<% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_image, size:"100x100" %></td>
            <td><%= link_to user.name, user_user_path(user.id) %></td>
            <td><%= user.introduction %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>
<div class='container px-5 px-md-0'>
  <div class='row'>
    <div class='col-md-12'>
      <h1 style= "font-family: fantasy">Posts List</h1>
      <table class='table table-inverse'>
        <tbody>
          <% @posts.each do |posts| %>
            <tr>
              <td><%= image_tag posts.user.get_image, class: "rounded-circle", size:"80x80" %></td>
              <td><%= link_to posts.user.name, admin_user_path(posts.user) %></td>
              <td><%= link_to posts.body, admin_post_path(posts.id) %></td>
              <td><i class="fas fa-tag"></i><%= posts.tags.map(&:name).join(', ') %></td>
              <td><i class="fas fa-comments"></i> <%= link_to "#{posts.post_comments.count}", admin_post_path(posts.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @posts %>
    </div>
  </div>
</div>